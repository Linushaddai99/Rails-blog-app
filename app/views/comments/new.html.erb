<%= form_with(model: @comment, url: user_post_comments_path, method: :post, scope: :comment) do |form| %>
    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_area :text, class: 'form-control' %>
    </div>
  
    <%= form.submit 'Create Comment', class: 'btn btn-primary' %>
  <% end %>