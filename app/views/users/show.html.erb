
<div class='user-index'>
    <div class='colored-a'>
        <div class='user-div'>
            <div>
              <img src="<%= @user.photo %>">
            </div>
            <div class='name-and-post'>
                <p><%= @user.name %><p>
                <p>Number of posts: <%= @user.posts.count %><p>
            </div>
        </div>
    </div>
</div>

<div class='bio'>
    <span>Bio:</span>
    <p><%= @user.bio %></p>
</div>

<% index = 1 %>
<% @posts.each do |post| %>
    <a href="/users/<%= @user.id%>/posts/<%= post.id %>">
    <div class='post-div'>
        <span  class='post-number'>Post <%= index %></span>
        <p><%= post.title %></p>
        <div class='comments-likes-div'>
            <span>comments: <%= post.comments.count %>,</span>
            <span>likes: <%= post.likes.count %></span>
        </div>
    </div>
    </a>
    <% index = index + 1 %>
<% end %>

<a href="/users/<%= @user.id %>/posts">
    <button class='see-all-btn'>See all posts</button>
</a>


